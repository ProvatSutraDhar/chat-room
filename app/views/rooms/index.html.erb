<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'form', room: Room.new %>
      <hr>
      <% @rooms.each do |room| %>
      <%= link_to room do %>
        <div class="card mb-2">
        <div class="card-body">
          <p><%= room.name %></p>
        </div>
      </div>
      <% end %>
      <%end%>
    </div>

    <div class="col-md-9">
        <%if @room.present?%>
        <div class="chat-room">
            <%= @room.name %>
        </div>

          <div class="chat-box">
            <%=render 'messages/form', message: Message.new%>
          </div>

        <%end%>
    </div>
  </div>
</div>
